:host
    display: block;
    position: relative;
    height: 100%;

.panel-position
    position: relative;
    height: 50%;
    top: 50%;
    transform: translateY(-50%);

    .panel
        height: 100%;
        position: relative;
        border: 0;
        background: none;


    .panel-body
        position: relative;
        top: 50%;
        transform: translateY(-50%);


.btn
    text-transform: uppercase;
    letter-spacing: 2px;
    background: rgba(0,0,0, 0.2);
    border: 1px solid rgba(0,0,0, 0.2);
    transition: 0.2s ease all;
    &:hover
        background: rgba(0,0,0, 0.5);
